@inject BikeSparesInventorySystem.Data.Repositories.Repository<Expenses> ExpensesRepository

<MudDialog Class="p-5">
    <DialogContent>
        <MudForm @ref="mudForm">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField @bind-Value="@Name" T="string" Placeholder="Expenses Name" Label="Expenses Name" />
                 </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="@Amount" 
                            Placeholder="Total Expense" 
                            Label="Total Expense" 
                            Error="@errorStatus"
                            ErrorText="@Error" 
                            Variant="Variant.Text" 
                            InputType="InputType.Number" 
                            Required />
                 </MudItem>
                <MudItem xs="12">
                    <MudDatePicker @bind-Date="@DateOfExpense" 
                        PickerVariant="PickerVariant.Dialog"
                        Class=" position-absolute"
                        ClosingDelay="1" 
                        Required 
                        Placeholder="Date Name" 
                        Label="Date"/>
                 </MudItem>
             </MudGrid>
        </MudForm>
     </DialogContent>
     <DialogActions>
         <MudButton OnClick="Cancel">Cancel</MudButton>
         <MudButton OnClick="AddExpense"
                    Variant="Variant.Filled"
                    Color="Color.Primary">
             Add Expenses
         </MudButton>
     </DialogActions>
 </MudDialog>