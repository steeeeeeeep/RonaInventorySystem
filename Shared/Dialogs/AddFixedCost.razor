@inject BikeSparesInventorySystem.Data.Repositories.Repository<Expenses> ExpensesRepository

<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudForm @ref="mudForm">
                <MudItem xs="12">
                    <MudTextField @bind-Value="@name" T="string" Placeholder="Expenses Namr" Label="Expenses Name" />
                 </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="@directCost" 
                            Placeholder="Total Expense" 
                            Label="Total Expense" 
                            Error="@errorStatus"
                            ErrorText="@error" 
                            Variant="Variant.Text" 
                            InputType="InputType.Number" 
                            Required />
                 </MudItem>
                <MudItem xs="12">
                    <MudDatePicker @bind-Date="@dateOfExpense" 
                        ClosingDelay="1" 
                        PickerVariant="PickerVariant.Dialog" 
                        Required Elevation="0" 
                        Orientation="Orientation.Landscape" 
                        Placeholder="Date Name" 
                        Label="Date"/>
                 </MudItem>
             </MudForm>
         </MudGrid>
     </DialogContent>
     <DialogActions>
         <MudButton OnClick="Cancel">Cancel</MudButton>
         <MudButton OnClick="AddExpense"
                    Variant="Variant.Filled"
                    Color="Color.Primary">
             Add Expenses
         </MudButton>
     </DialogActions>
 </MudDialog>