@inject BikeSparesInventorySystem.Data.Services.AuthService AuthService;

<MudDrawerHeader Class="mt-5">
</MudDrawerHeader>
<MudNavMenu Bordered="true" Color="Color.Primary" Margin="Margin.Normal" Style="scrollbar-width: 1px; scrollbar-color: inherit; scrollbar-base-color:transparent">
	@if (AuthService.IsUserAdmin())
	{
		<MudNavLink Href="@Dashboard.Route" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
	}
	<MudNavGroup Icon="@Icons.Material.Filled.Inventory" Title="Inventory" Class="overflow-hidden">
			<MudNavLink Href="@Inventory.Route">Products</MudNavLink>
			<MudNavLink Href="@Categories.Route">Product Category</MudNavLink>
	</MudNavGroup>
	<MudNavGroup Icon="@Icons.Material.Filled.EventAvailable" Title="Sales" Class="overflow-hidden">
		<MudNavLink Href="@Miner.Route">Today's Order</MudNavLink>
		<MudNavLink Href="@Order.Route">Manage Orders</MudNavLink>
		<MudNavLink Href="@Purchase.Route">Purchases</MudNavLink>
		<MudNavLink Href="@GetIncomeSummary.Route">Income Summary</MudNavLink>
		<MudNavLink Disabled>Payroll</MudNavLink>
	</MudNavGroup>
	<MudDivider DividerType="DividerType.FullWidth" Light="true"/>
	<MudNavLink Href="@GetExpenseFixedCost.Route" Icon="@Icons.Material.Filled.Payments">Expenses</MudNavLink>
	<MudNavLink Href="@GetInvistors.Route" Icon="@Icons.Material.Filled.PersonAdd">Invistors</MudNavLink>
	<MudNavLink Href="@ActivityLogs.Route" Icon="@Icons.Material.Filled.Approval">Activity Logs</MudNavLink>
	@if (AuthService.IsUserAdmin())
	{
		<MudNavLink Href="@Users.Route" Icon="@Icons.Material.Filled.ManageAccounts">Users</MudNavLink>
	}
	<MudNavLink Href="@ChangePassword.Route" Icon="@Icons.Material.Filled.Password">Change Password</MudNavLink>
</MudNavMenu>